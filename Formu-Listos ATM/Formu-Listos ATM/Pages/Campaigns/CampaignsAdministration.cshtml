@page
@model Formu_Listos_ATM.Pages.Campaigns.CampaignsAdministrationModel
@{
}
<div class="row">
    <form asp-page="CampaignsAdministration" method="post">
        <div class="card p-0 ">
            <div class="card-header newCardsBorder-primary border-primary">
                <h1>Administracion de campañas</h1>
            </div>
            <div class="card-body">
                <div class="mb-3 row">
                    <label asp-for="campaignsFilter.CampannaFullTitle" class="col-2 col-form-label"></label>
                    <div class="col-4 m-2">
                        <input type="text" class="form-control" asp-for="campaignsFilter.CampannaFullTitle">
                    </div>
                </div>
            </div>
            <div class="card-footer d-flex justify-content-between">
                <div>
                    <button class="btn btn-primary">Buscar</button>
                    <button class="btn btn-secondary">Reiniciar</button>
                </div>
                <a asp-page="campaignsMaintenance"  class="btn btn-success">Agregar nueva campaña</a>
            </div>
        </div>
    </form>
</div>
<div class="row mt-3 bg-light">
    @foreach (var campaign in Model.CampaignsList)
    {
        <div class="col-lg-6 col-md-12 mb-3">
            <div class="card newCardsBorder-dark p-0">
                <div class="card-title">
                    <h3>@campaign.CampannaFullTitle</h3>
                </div>
                <div class="card-body m-0">
                    <span> @campaign.Description</span>
                </div>
                <div class="card-footer d-flex justify-content-between ">
                    <a asp-page="campaignsMaintenance" asp-route-campaignId="@campaign.CampannaId" class="btn btn-secondary">Editar campaña</a>
                    <a asp-page="/Forms/Forms" asp-route-FormId="@campaign.CampannaId" class="btn btn-primary">Ver formularios</a>
                </div>
            </div>
        </div>
    }
    @if (Model.CampaignsList.Count() == 0)
    {
        <div class="col-12 pt-5 pb-5">
            <div class="card newCardsBorder-dark p-0 text-center p2">
                <h3>No Hay resultados</h3>
                
            </div>
        </div>
    
    }
</div>
