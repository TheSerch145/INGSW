@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="card border-3 border-bottom-0 border-end-0 border-start-0 border-dark bg-light p-3">
    <div class="row">
        <div class="col-12">
            <h1 class="d-flex justify-content-center">Login</h1>
        </div>
        <form>
            <div class="col-lg-6 col-md-6">
                <label for="basic-url" class="form-label" asp-for="User.Username"></label>
                <div class="input-group mb-3">
                    <input type="text" class="form-control" id="basic-url" asp-for="User.Username">
                    <span class="input-group-text" id="basic-addon3" asp-validation-for="User.Username"></span>

                </div>
            </div>

            <div class="col-lg-6 col-md-6">
                <label for="basic-url" class="form-label" asp-for="User.Password"></label>
                <div class="input-group mb-3">
                    <input type="text" class="form-control" id="basic-url" aria-describedby="basic-addon3" asp-for="User.Password">
                    <span class="input-group-text" id="basic-addon3" asp-validation-for="User.Password"></span>
                </div>
            </div>
        </form>
        
    </div>
</div>

